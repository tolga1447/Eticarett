@model Eticaret.Core.Entities.Iletisim

@{
    ViewData["Title"] = "Contact Us";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4 fw-bold">İletişim</h1>
        <p class="text-muted">Bize ulaşmak için aşağıdaki formu doldurun.</p>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <form asp-action="ContactUs">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="İsim" class="form-label"><i class="bi bi-person"></i> Adınız</label>
                        <input asp-for="İsim" class="form-control shadow-sm rounded" placeholder="Adınızı girin" />
                        <span asp-validation-for="İsim" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Soyisim" class="form-label"><i class="bi bi-person-fill"></i> Soyadınız</label>
                        <input asp-for="Soyisim" class="form-control shadow-sm rounded" placeholder="Soyadınızı girin" />
                        <span asp-validation-for="Soyisim" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"><i class="bi bi-envelope"></i> E-Posta</label>
                        <input asp-for="Email" type="email" class="form-control shadow-sm rounded" placeholder="E-posta adresinizi girin" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Telefon" class="form-label"><i class="bi bi-telephone"></i> Telefon</label>
                        <input asp-for="Telefon" type="tel" class="form-control shadow-sm rounded" placeholder="Telefon numaranızı girin" />
                        <span asp-validation-for="Telefon" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Mesaj" class="form-label"><i class="bi bi-chat-left-dots"></i> Mesajınız</label>
                        <textarea asp-for="Mesaj" class="form-control shadow-sm rounded" rows="4" placeholder="Mesajınızı buraya yazın"></textarea>
                        <span asp-validation-for="Mesaj" class="text-danger"></span>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-success btn-lg w-100">Gönder <i class="bi bi-send"></i></button>
                    </div>
                </form>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body p-0">
                    <h5 class="card-header bg-primary text-white text-center">Bize Ulaşın</h5>
                    <iframe class="w-100" height="450" style="border:0;"
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d99608.05904521878!2d35.38778682735017!3d38.723506012395895!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x152b0e1d3fa4a74f%3A0x84bd8c4d5a4c2da7!2sKayseri!5e0!3m2!1str!2str!4v1742393034740!5m2!1str!2str"
                            allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>
    </div>
</div>