@model IEnumerable<Kategori>

@{
	foreach (var anaKategori in Model.Where(c=> c.AnaMenuId == 0))
	{
		<div class="dropdown">
			<a class="btn dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
				@anaKategori.Kategoriİsim
			</a>

			<ul class="dropdown-menu">
				@foreach (var altKategori in Model.Where(c =>  c.AnaMenuId == anaKategori.Id))
				{
					<li><a class="dropdown-item" href="/Kategoriler/Index/@altKategori.Id">@altKategori.Kategoriİsim</a></li>
				}
				
			</ul>
		</div>
	}
}
