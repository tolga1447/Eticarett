@model List<Urun>
@{
	ViewData["Title"] = "Favorilerim";
}

<

<section class="container my-5">
	<div class="text-center">
		<h1 class="display-4">Favorilerim</h1>
	</div>
	<div class="row">
		<div class="col-md-8">
			<div class="table-responsive">
				@if (Model.Any())
				{
					<table class="table table-hover">
						<tr>
							<th></th>
							<th>Ürün</th>
							<th>Fiyat</th>
							<th></th>
						</tr>
						<tbody>

							@foreach (var item in Model)
							{
								<tr>
									<td>
										<img src="/Img/Urunler/@item.Resim" alt="" height="40" />
									</td>
									<td>
										<a class="nav-link text-dark" href="/Urunler/Details/@item.Id">
											@item.Urunİsim
										</a>
									</td>
									<td>
										@item.UrunFiyat.ToString("c")
									</td>
									<td>
										<form asp-action="Remove" asp-controller="Favoriler">
											<input type="hidden" name="UrunId" value="@item.Id" />
											<button class="btn btn-sm btn-danger" type="submit">
												<i class="bi bi-x-lg"></i>
											</button>
										</form>
									</td>
								</tr>
							}
						</tbody>
					</table>
				}
				else 
				{
					<div class="container">
						<div class="alert alert-warning my-5">
							<h3>Favorilerinizde Ürün Bulunmamaktadır!</h3>
						</div>
					</div>
				}
			</div>
		</div>
	</div>
</section>
