
@model Kategori

@{
    ViewData["Title"] = "Kategori Ekle";
}


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Kategoriİsim" class="control-label"></label>
                <input asp-for="Kategoriİsim" class="form-control" />
                <span asp-validation-for="Kategoriİsim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aciklama" class="control-label"></label>
                <textarea asp-for="Aciklama" class="form-control"> </textarea>
                <span asp-validation-for="Aciklama" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resim" class="control-label"></label>
                <input asp-for="Resim" class="form-control" type="file" />
                <span asp-validation-for="Resim" class="text-danger"></span>
            </div>
            <div class="form-group form-check mt-1">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Aktif" /> @Html.DisplayNameFor(model => model.Aktif)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="UstMenu" /> @Html.DisplayNameFor(model => model.UstMenu)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="AnaMenuId" class="control-label"></label>
                <select asp-for="AnaMenuId" class="form-select" asp-items="ViewBag.Kategoriler">
                    <option value="0">Ana Kategori</option>
                </select>
                <span asp-validation-for="AnaMenuId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SiralamaNo" class="control-label"></label>
                <input asp-for="SiralamaNo" class="form-control" />
                <span asp-validation-for="SiralamaNo" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Ekle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Dön</a>
</div>

