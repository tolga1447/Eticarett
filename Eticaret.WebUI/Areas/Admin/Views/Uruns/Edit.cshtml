@model Eticaret.Core.Entities.Urun

@{
    ViewData["Title"] = "Ürün Düzenle";
}


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Resim" />
            <input type="hidden" asp-for="OlusturmaTarihi" />

            <div class="form-group">
                <label asp-for="Urunİsim" class="control-label"></label>
                <input asp-for="Urunİsim" class="form-control" />
                <span asp-validation-for="Urunİsim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aciklama" class="control-label"></label>
                <textarea asp-for="Aciklama" class="form-control"> </textarea>
                <span asp-validation-for="Aciklama" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resim" class="control-label"></label>
                <input asp-for="Resim" class="form-control" type="file" />
                <span asp-validation-for="Resim" class="text-danger"></span>
                @if (Model.Resim != null && !string.IsNullOrWhiteSpace(Model.Resim))
                {
                    <img src="/Img/Urunler/@Model.Resim" height="75" />
                    <label class="form-check-label">
                        @Html.CheckBox("cbResmiSil") Resmi Sil
                    </label>
                }
            </div>
            <div class="form-group">
                <label asp-for="UrunFiyat" class="control-label"></label>
                <input asp-for="UrunFiyat" class="form-control" />
                <span asp-validation-for="UrunFiyat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UrunKodu" class="control-label"></label>
                <input asp-for="UrunKodu" class="form-control" />
                <span asp-validation-for="UrunKodu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StokMiktari" class="control-label"></label>
                <input asp-for="StokMiktari" class="form-control" />
                <span asp-validation-for="StokMiktari" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Aktif" /> @Html.DisplayNameFor(model => model.Aktif)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="AnaSayfa" /> @Html.DisplayNameFor(model => model.AnaSayfa)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="KategoriId" class="control-label"></label>
                <select asp-for="KategoriId" class="form-select" asp-items="ViewBag.KategoriId"></select>
                <span asp-validation-for="KategoriId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MarkaId" class="control-label"></label>
                <select asp-for="MarkaId" class="form-select" asp-items="ViewBag.MarkaId"></select>
                <span asp-validation-for="MarkaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SiralamaNo" class="control-label"></label>
                <input asp-for="SiralamaNo" class="form-control" />
                <span asp-validation-for="SiralamaNo" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Dön</a>
</div>

